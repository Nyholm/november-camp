{% extends "SymfonyseBlogBundle::base.html.twig" %}

{% block title %}
{{entry.title }} — {{parent()}}
{% endblock %}

{% block content %}
    <article>
        <header>
            <h1><a href="{{path('blog', {'permalink': entry.permalink})}}">{{entry.title}}</a></h1>
        </header>
        {{ entry.content|markdown }}
        <div>
            <p><small>Published: <time pubdate="pubdate">{{entry.postedAt|date("F jS \\a\\t g:ia")}}</time> | In: 
                    {% for tag in entry.tags %}
                        <a href="{{path('tag', {'permalink': tag})}}">{{ tag }}</a>
                    {% endfor %}
                </small></p>
        </div>
    </article>
{% endblock %}
